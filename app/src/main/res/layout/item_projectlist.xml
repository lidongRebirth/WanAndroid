<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/iv_envelope"
        android:layout_height="@dimen/dp_90"
        android:layout_width="@dimen/dp_160"
        android:src="@drawable/itemlist_pic"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"/>
    <TextView
        android:id="@+id/tv_title"
        android:text="组件化的玩Android App多大字符多大字符"
        style="@style/EssayTitleStyle"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_envelope"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_author"
        android:layout_marginBottom="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10" />

    <ImageView
        android:id="@+id/iv_author"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:src="@drawable/ic_author"
        app:layout_constraintLeft_toRightOf="@id/iv_envelope"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintBottom_toTopOf="@id/iv_time"
        android:layout_marginBottom="@dimen/dp_5"/>

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="作者名字"
        app:layout_constraintLeft_toLeftOf="@id/tv_publishTime"
        app:layout_constraintBottom_toTopOf="@id/tv_publishTime"
        android:layout_marginBottom="@dimen/dp_5" />

    <LinearLayout
        android:id="@+id/ll_collect"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/iv_collect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_no_collect" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_publishTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019.10.1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@id/iv_time"
        android:layout_marginLeft="@dimen/dp_8"/>

    <ImageView
        android:id="@+id/iv_time"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:src="@drawable/ic_publishtime"
        app:layout_constraintLeft_toRightOf="@id/iv_envelope"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_10"/>


    



</android.support.constraint.ConstraintLayout>